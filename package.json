{
  "name": "@matcher9131/mjson",
  "version": "0.0.2",
  "description": "JSONをベースとした独自形式の牌譜フォーマットです。",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "scripts": {
    "generate": "node --loader ts-node/esm src/generator/main.ts && npx prettier --write src",
    "doc": "npx typedoc --options typedoc.config.json src/generator/doc/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "test": "npx vitest run"
  },
  "author": "matcher9131",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/tsdoc": "^0.14.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "js-yaml": "^4.1.0",
    "jtd": "^0.1.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.4",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
